<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.linkhand.baixingguanjia.ui.activity.my.AddCommunityActivity">

    <include
        layout="@layout/include_common_header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="@color/defaultBackgroundGray"
                />
            <!--小区名称-->
            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/x10"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:paddingTop="@dimen/x10">

                <TextView
                    android:id="@+id/text_left"
                    android:layout_width="@dimen/x50"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="小区名称"
                    android:textColor="@color/blackText"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/text_right"
                    android:layout_width="@dimen/x200"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_toRightOf="@+id/text_left"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请选择小区"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/grayText"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/image_right"
                    android:layout_width="@dimen/x16"
                    android:layout_height="@dimen/x16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go_right"
                    android:visibility="visible"
                    />

            </RelativeLayout>

            <View
                style="@style/grayline"
                android:layout_marginLeft="@dimen/x10"/>

            <!--期数-->
            <include
                android:id="@+id/layout2"
                layout="@layout/include_item_edittext_1"/>
            <!--组团书-->
            <include
                android:id="@+id/layout3"
                layout="@layout/include_item_edittext_1"/>
            <!--楼栋号-->
            <include
                android:id="@+id/layout4"
                layout="@layout/include_item_edittext_1"/>
            <!--单元号-->
            <include
                android:id="@+id/layout5"
                layout="@layout/include_item_edittext_1"/>
            <!--楼层号-->
            <include
                android:id="@+id/layout6"
                layout="@layout/include_item_edittext_1"/>
            <!--房间号-->
            <include
                android:id="@+id/layout7"
                layout="@layout/include_item_edittext_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x80"
                android:text="请放心添加，技术君会实时保障您的隐私！"
                android:textColor="@color/grayText"/>

            <TextView
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/background_corner_button_bluetopic_color"
                android:gravity="center"
                android:paddingBottom="@dimen/x8"
                android:paddingTop="@dimen/x8"
                android:text="保存"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
