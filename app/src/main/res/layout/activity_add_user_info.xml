<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackgroundGray"
    android:orientation="vertical"
    tools:context="com.linkhand.activity.car.AddUserInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/include_common_header"/>
        />

        <View
            style="@style/grayline"
            android:layout_height="@dimen/x8"/>


        <include
            android:id="@+id/name_layout"
            layout="@layout/include_item_edittext_1"/>

        <include
            android:id="@+id/phone_layout"
            layout="@layout/include_item_edittext_1"/>

        <include
            android:id="@+id/address_layout"
            layout="@layout/include_item_edittext_1"/>

        <View
            style="@style/grayline"
            android:layout_height="@dimen/x8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/x10"
                android:paddingTop="@dimen/x10"
                android:text="您的需求"
                android:textColor="@color/grayText"/>

            <EditText
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:background="@color/colorWhite"
                android:gravity="left"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@drawable/background_corner_button_blue_color"
        android:gravity="center"
        android:paddingBottom="@dimen/x10"
        android:paddingTop="@dimen/x10"
        android:text="提交信息"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>
