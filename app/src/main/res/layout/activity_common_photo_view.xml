<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/base_main_lyt"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorBlack"
             android:clipChildren="false"
             android:orientation="vertical">


    <com.linkhand.baixingguanjia.widget.photoview.PhotoViewPager
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"/>

    <RelativeLayout
        android:id="@+id/acpv_ll_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#20000000">

        <RelativeLayout
            android:id="@+id/actionbar_back"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="31dp"
            android:descendantFocusability="blocksDescendants">

            <ImageView
                android:id="@+id/aipu_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:src="@drawable/common_nav_back"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/acpv_iv_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/xiangjijiaojuan_dagoubg"
           />
    </RelativeLayout>


    <!--<TextView-->
    <!--android:id="@+id/index_text"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="bottom|center_horizontal"-->
    <!--android:layout_marginBottom="16dp"-->
    <!--android:text="1/1"-->
    <!--android:textColor="@color/white"-->
    <!--android:textSize="18sp"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="#20000000">

        <LinearLayout
            android:id="@+id/btn_send"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/all_border_yuanjiao"
            android:gravity="center">
            <!--小圆圈数字-->
            <TextView
                android:id="@+id/acpv_tv_nums"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/shape_circle_picnum"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/acpv_tv_txt"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/x8"
                android:gravity="center"
                android:text="@string/complete"
                android:textColor="#7d2497f4"
                android:textSize="14dp"
                />

        </LinearLayout>
    </RelativeLayout>


</FrameLayout>