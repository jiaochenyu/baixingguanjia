<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackgroundGray"
    tools:context="com.linkhand.activity.SelectAddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submit"
        android:orientation="vertical">


        <include
            layout="@layout/include_common_header"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/defaultBackgroundGray"/>

        <include
            layout="@layout/include_select_address_menu"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/defaultBackgroundGray"/>

        <ListView
            android:background="@color/colorWhite"
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0.5dp"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:divider="@color/defaultBackgroundGray"
            >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorTopic"
        android:gravity="center"
        android:paddingBottom="@dimen/x15"
        android:paddingTop="@dimen/x15"
        android:text="确定"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"/>
</RelativeLayout>
