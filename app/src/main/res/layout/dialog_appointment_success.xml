<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/x300"
              android:layout_height="wrap_content"
              android:background="@drawable/background_corner_white"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yuyueSuccess"
            android:textColor="@color/redTopic"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x3"
            android:src="@drawable/icon_duihao"/>
    </LinearLayout>


    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:text="@string/yuyueSuccessPromot2"
        android:textColor="@color/blackText"
        android:textSize="14sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x15"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_corner_button_gray_color_line"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:paddingTop="@dimen/x5"
            android:text="否"
            android:textColor="@color/grayText"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_corner_button_redtopic_color_line"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:paddingTop="@dimen/x5"
            android:layout_marginLeft="@dimen/x20"
            android:text="是"
            android:textColor="@color/redTopic"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>