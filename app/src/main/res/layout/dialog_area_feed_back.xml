<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/x300"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:background="@drawable/background_corner_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x20"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/x20">

            <EditText
                android:id="@+id/content_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x160"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/background_corner_line_blue"
                android:gravity="left"
                android:hint="请输入要反馈的信息..."
                android:padding="@dimen/x10"
                android:scrollbars="vertical"
                android:textColor="@color/blackText"
                android:textSize="14sp"
                android:textColorHint="@color/grayText"/>

            <EditText
                android:id="@+id/phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/background_corner_line_blue"
                android:gravity="left|center_vertical"
                android:hint="留下您的联系方式吧..."
                android:padding="@dimen/x10"
                android:textSize="14sp"
                android:scrollbars="vertical"
                android:textColor="@color/blackText"
                android:textColorHint="@color/grayText"/>

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x15"
                android:background="@drawable/background_corner_button_bluetopic_color"
                android:gravity="center"
                android:paddingBottom="@dimen/x6"
                android:paddingTop="@dimen/x6"
                android:text="提交"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/x40"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_corner_white"
            android:paddingLeft="@dimen/x3"
            android:paddingRight="@dimen/x3"
            android:paddingTop="@dimen/x1"
            android:src="@drawable/icon_feed_back"
            />

    </RelativeLayout>

</LinearLayout>