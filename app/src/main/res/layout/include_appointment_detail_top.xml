<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/iv_detai_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x250"
            android:background="@color/colorWhite"
            app:canLoop="true"/>

        <LinearLayout
            android:id="@+id/ll_offset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/x10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    style="@style/goodsBlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金牌月嫂小时工"/>

                <TextView
                    android:id="@+id/type"
                    style="@style/goodsBlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_toRightOf="@+id/name"
                    android:background="@drawable/background_textview_corner_line_red"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:paddingTop="@dimen/x1"
                    android:paddingBottom="@dimen/x1"
                    android:text="个人"
                    android:textSize="12sp"
                    android:textColor="@color/redTopic"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/g_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/x5"
                    android:drawableRight="@mipmap/icon_yes"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="举报"
                    android:textColor="@color/grayText"/>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="发布时间"
                    android:textColor="@color/grayText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_toRightOf="@+id/text1"
                    android:gravity="center"
                    android:text="2017.6.25"
                    android:textColor="@color/grayText"/>

            </RelativeLayout>

            <!--说明-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x3"
                    android:layout_height="@dimen/x14"
                    android:background="@color/redTopic"
                    />

                <TextView
                    android:layout_width="@dimen/x35"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="详情"
                    android:textColor="@color/blackText"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                style="@style/grayline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/x8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x3"
                    android:paddingLeft="@dimen/x10"
                    android:text="内容哈哈哈哈哈哈技术等级覅技术等级自己就祭祀等级时间地附近几十斤几就"
                    android:textColor="@color/blackText"
                    android:textSize="14sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center"
                >


                <TextView
                    android:id="@+id/chakanquanbu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_textview_corner_line_red"
                    android:paddingBottom="@dimen/x2"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:paddingTop="@dimen/x2"
                    android:text="查看全部"
                    android:textColor="@color/redFE5"
                    android:textSize="14sp"/>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x8"
            android:background="@color/defaultBackgroundGray"/>

    </LinearLayout>
</ScrollView>