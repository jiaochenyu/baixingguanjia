<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:background="@color/redTopic"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10">

    <TextView
        android:id="@+id/money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="￥"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/money_text"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/money_text"
        android:text="36.6"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x10"
        android:layout_toRightOf="@+id/price"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/money_text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/money_text"
            android:text="85件已售"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x3"
            android:layout_marginTop="@dimen/x2">

            <TextView
                android:id="@+id/tv_good_detail_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x4"
                android:paddingRight="@dimen/x4"
                android:text="159"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@+id/tv_good_detail_discount"
                android:layout_alignRight="@+id/tv_good_detail_discount"
                android:layout_centerVertical="true"
                android:background="@color/colorWhite"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/x10"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/money_text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/money_text"
            android:text="距离结束仅剩"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x3"
            android:layout_marginTop="@dimen/x2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x2"
                android:text="15:36:00:2"
                android:textColor="@color/colorWhite"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>