<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x10">

        <com.linkhand.customView.AlignedTextView
            android:id="@+id/text_left"
            android:layout_width="@dimen/x50"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="小区名称"
            android:textColor="@color/blackText"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/edittext_right"
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:layout_toRightOf="@+id/text_left"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入小区名称"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/grayText"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/image_right"
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/x16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_go_right"
            android:visibility="gone"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/x10"
        android:background="@color/defaultBackgroundGray"
        />

</LinearLayout>