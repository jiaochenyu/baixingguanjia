<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grayFAF"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x15"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:paddingTop="@dimen/x15">


    <ImageView
        android:id="@+id/image_good"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:background="@drawable/background_no_corner_kuang"
        android:src="@drawable/default_pic_show"
        />

    <TextView
        android:id="@+id/good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_good"
        android:paddingTop="@dimen/x1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x15"
        android:layout_toRightOf="@+id/image_good"
        android:text=""
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/good_name"
        android:layout_below="@+id/good_name"
        android:layout_marginTop="@dimen/x5"
        android:text=""
        android:textColor="@color/grayText"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_good"
        android:layout_alignLeft="@id/type_tv"
        android:text="¥ 30.000.00"
        android:textColor="@color/redFD6"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/price1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x15"
        android:textColor="@color/blackText"
        android:textSize="14sp"
        android:text="×1"/>

</RelativeLayout>

