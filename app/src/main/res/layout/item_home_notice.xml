<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/x5">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:scaleType="fitXY"
        android:src="@drawable/notice_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_blue_corner"
        android:gravity="center"
        android:paddingBottom="@dimen/x4"
        android:paddingRight="@dimen/x4"
        android:text="预告"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image"
        android:background="@color/colorWhite"
        android:gravity="center_vertical|right"
        android:paddingBottom="@dimen/x8"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x8"
        android:text=""
        android:textColor="@color/blue7BA"
        android:textSize="14sp"/>

    <RelativeLayout
        android:id="@+id/finish_event"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:alpha="0.8"
        android:background="@color/defaultBackgroundGray"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="敬请期待"/>


    </RelativeLayout>
</RelativeLayout>