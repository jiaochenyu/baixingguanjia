<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x15"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x15">


        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_alignParentTop="true"
            android:background="@drawable/background_no_corner_kuang"
            android:src="@drawable/default_pic_show"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:layout_toRightOf="@+id/image"
            android:paddingTop="@dimen/x1"
            android:text="华润大厦"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:text="@string/string21"
            android:textColor="@color/grayText"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="¥ 97.8万"
            android:textColor="@color/redFF4"
            android:textSize="16sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@+id/image"
            android:text="石家庄市裕华区空中花园"
            android:textColor="@color/grayText"
            android:textSize="12sp"/>
    </RelativeLayout>

    <View
        style="@style/grayline"/>

</LinearLayout>