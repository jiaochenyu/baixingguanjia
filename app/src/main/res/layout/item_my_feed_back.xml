<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x15"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/x15">


        <View
            android:id="@+id/image"
            android:layout_width="@dimen/x5"
            android:layout_height="@dimen/x5"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_blue"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@+id/image"
            android:layout_toLeftOf="@+id/time"
            android:paddingTop="@dimen/x1"
            android:layout_marginRight="@dimen/x20"
            android:text="通知"
            android:textColor="@color/blackText"/>


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/image"
            android:text="2017-06-20"
            android:textColor="@color/grayText"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/feedback_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/time"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/background_textview_big_corner_line_red"
            android:gravity="center"
            android:paddingBottom="@dimen/x3"
            android:paddingLeft="@dimen/x7"
            android:paddingRight="@dimen/x7"
            android:paddingTop="@dimen/x3"
            android:text="再次反馈"
            android:textColor="@color/redTopic"
            android:textSize="12sp"/>

    </RelativeLayout>

</LinearLayout>