<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSystemBlack</item>
        <item name="colorPrimaryDark">@color/colorSystemBlack</item>
        <item name="colorAccent">@color/colorSystemBlack</item>
    </style>


    <!--黑色系统标题栏样式-->
    <style name="sys_title_black" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorSystemBlack</item>
        <item name="colorPrimaryDark">@color/colorSystemBlack</item>
    </style>
    <!--蓝色系统标题栏样式-->
    <style name="sys_title_blue" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blueTopic</item>
        <item name="colorPrimaryDark">@color/blueTopic</item>
    </style>
    <!--红色系统标题栏样式-->
    <style name="sys_title_red" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorSystemRed</item>
        <item name="colorPrimaryDark">@color/colorSystemRed</item>
    </style>

    <!--灰色系统标题栏样式-->
    <style name="sys_title_gray" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorSystemGray</item>
        <item name="colorPrimaryDark">@color/colorSystemGray</item>
    </style>

    <!--灰色系统标题栏样式-->
    <style name="sys_title_bluedeep" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorSystemBlueDeep</item>
        <item name="colorPrimaryDark">@color/colorSystemBlueDeep</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="goodsBlackTextStyle">
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_border_overlay" format="boolean"/>
        <attr name="civ_fill_color" format="color"/>
    </declare-styleable>


    <style name="goods_info_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>



    <!--选择照片弹出框-->
    <style name="mypopwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/image_popshow_anim</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/image_pophidden_anim</item>
        <!-- <item name="android:windowBackground">@android:color/transparent</item>-->

    </style>

    <!--选择菜单的popupwindow-->
    <style name="menu_popwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- <item name="android:windowBackground">@android:color/transparent</item>-->

    </style>


    <!--灰色的线-->
    <style name="grayline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/defaultBackgroundGray</item>
    </style>

    <style name="tabTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--  -->
    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="searchTypeTabRightDivider" parent="vertical_line">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="searchTypeTabBottomPressLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@color/blueTopic</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/defaultBackgroundGray</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/defaultBackgroundGray</item>
    </style>

